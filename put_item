// import AWS sdk
const AWS = require('aws-sdk');

// create a db object to put the item
const db = new AWS.DynamoDB.DocumentClient({
    region: 'us-east-1'
})

// write the lambda function
// create an event to store
exports.handler = async (event) => {
    const params = {
        TableName: 'yourTableName',
        Item: {
            id: 'yourID',
            email: 'yourEmail',
            firstname: 'yourFirstName',
            lastname: 'yourLastName'
        }
    };
    // tell the database where to store the item
    const id ='yourID'
    params.Item.id = id;
    
    // wait for the item to be put into the database
    return await db.put(params).promise();   
};
